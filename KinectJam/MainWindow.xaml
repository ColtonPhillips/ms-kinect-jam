<Window x:Class="KinectJam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Broken Mirror" Height="350" Width="425">
    <Grid>
        <Image x:Name="mImage" HorizontalAlignment="Left" Height="309" VerticalAlignment="Top" Width="507"/>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="mirror" HorizontalAlignment="Left" Height="423" VerticalAlignment="Top" Width="440" Source="Resources/mirror1.png" Margin="-9,-52,-14,-52" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.234"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>
